{
  "trailingSlash": "auto",
  "routes": [
    {
      "route": "*.{js,json,css,jpg,png,ico,webmanifest}"
    },
    {
      "route": "/",
      "rewrite": "/en/index.html"
    },
    {
      "route": "/en/*",
      "rewrite": "/en/index.html"
    },
    {
      "route": "/es/*",
      "rewrite": "/es/index.html"
    }
  ],
  "navigationFallback": {
    "rewrite": "/en/index.html",
    "exclude": ["/assets/*", "/es/*.{js,css}", "/en/*.{js,css}"]
  }
}